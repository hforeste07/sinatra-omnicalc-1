<h1>Square Results</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @the_apr %>
  </dd>
<dt>
    Number of years
  </dt>
  <dd>
    <%= @the_years.to_i %>
  </dd>
  <dt>
    Principal
  </dt>
  <dd>
    <%= @the_principal.to_fs(:currency) %>
  </dd>
  <dt>
    Payment
  </dt>
  <dd>
    <%= @the_results.round(2).to_fs(:currency) %>
  </dd>
</dl>

